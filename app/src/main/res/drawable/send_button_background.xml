<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#CCCCCC" /> <!-- Basılıyken gri arka plan -->
            <corners android:radius="8dp" /> <!-- Yuvarlak köşeler -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Beyaz arka plan -->
            <corners android:radius="8dp" /> <!-- Yuvarlak köşeler -->
            <stroke
                android:width="1dp"
                android:color="#DDDDDD" /> <!-- Gri kenarlık -->
        </shape>
    </item>
</selector>
